[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    node_modules,
    frontend/dist,
    backend/output
# ignore: E203 (whitespace before ':'), E501 (line too long, handled by black), W503 (line break before binary operator), E402 (module level import not at top of file)
ignore = E203, E501, W503, E402
per-file-ignores =
    __init__.py:F401
max-complexity = 10
