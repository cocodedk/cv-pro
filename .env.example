# Copy to .env and fill in real values. Never commit .env.

# --- Supabase ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret-from-dashboard
SUPABASE_DEFAULT_USER_ID=your-test-user-id

# --- CORS (dev) ---
CORS_ORIGINS=http://localhost:5173,http://localhost:8000

# --- AI (OpenAI-compatible) ---
# Most inference providers support an OpenAI-style Chat Completions API.
# Set a base URL that includes /v1 (provider-dependent).
AI_BASE_URL=https://api.openai.com/v1
AI_API_KEY=your_api_key_here
AI_MODEL=gpt-4o-mini

# Optional tuning (safe defaults)
AI_TEMPERATURE=0.2
AI_MAX_OUTPUT_TOKENS=1600
AI_REQUEST_TIMEOUT_S=60

# Optional: disable AI calls entirely (use heuristics-only mode)
AI_ENABLED=false

# --- Frontend (Vite) ---
VITE_API_BASE_URL=http://localhost:8000
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_AUTH_ENABLED=true

# --- Showcase (GitHub Pages) ---
CV_SHOWCASE_ENABLED=true
CV_SHOWCASE_OUTPUT_DIR=frontend/public/showcase
CV_SHOWCASE_KEYS_DIR=backend/output/showcase_keys
# Optional: set to a base64 key; if empty, per-CV keys are generated.
CV_SHOWCASE_SCRAMBLE_KEY=
